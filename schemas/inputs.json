{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/inputs.json",
    "title": "inputs",
    "description": "The description of the inputs that can be used to design a Magnetic",
    "type": "object",
    "properties": {
        "operatingPoints":{
            "description": "Data describing the operating points",
            "title": "operatingPoints",
            "type": "array",
            "items": {                
                "$ref": "/schemas/inputs/operatingPoint.json"
            },
            "minItems": 1
        },
        "designRequirements":{
            "description": "Data describing the design requirements",
            "title": "designRequirements",
            "$ref": "/schemas/inputs/designRequirements.json"
        },
        "converterInformation":{
            "title": "converterInformation",
            "type": "object",
            "properties": {
                "supportedTopologies":{
                    "type": "object",
                    "properties": {
                        "flyback": {
                            "$ref": "/schemas/inputs/topologies/flyback.json",
                        },
                        "currentTransformer": {
                            "$ref": "/schemas/inputs/topologies/currentTransformer.json",
                        },
                        "isolatedBuck": {
                            "$ref": "/schemas/inputs/topologies/isolatedBuck.json",
                        },
                        "isolatedBuckBoost": {
                            "$ref": "/schemas/inputs/topologies/isolatedBuckBoost.json",
                        },
                        "buck": {
                            "$ref": "/schemas/inputs/topologies/buck.json",
                        },
                        "boost": {
                            "$ref": "/schemas/inputs/topologies/boost.json",
                        },
                        "pushPull": {
                            "$ref": "/schemas/inputs/topologies/pushPull.json",
                        },
                        "forward": {
                            "$ref": "/schemas/inputs/topologies/forward.json",
                        }
                    }
                }
            },
        }
    },
    "required": ["operatingPoints", "designRequirements"],

    "$defs": {
    }
}