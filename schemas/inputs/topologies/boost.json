{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/inputs/topologies/boost.json",
    "title": "boost",
    "description": "The description of a Boost converter excitation",
    "type": "object",
    "properties": {
        "inputVoltage": {
            "description": "The input voltage of the boost",
            "$ref": "../../utils.json#/$defs/dimensionWithTolerance"
        },
        "diodeVoltageDrop": {
            "description": "The voltage drop on the diode",
            "type": "number"
        },
        "maximumSwitchCurrent": {
            "description": "The maximum current that can go through the selected switch",
            "type": "number"
        },
        "currentRippleRatio": {
            "description": "The maximum current ripple allowed in the output",
            "type": "number"
        },
        "efficiency": {
            "description": "The target efficiency",
            "type": "number",
            "default": 1
        },
        "operatingPoints": {
            "description": "A list of operating points",
            "type": "array",
            "items": {
                "$ref": "#/$defs/boostOperatingPoint"
            },
            "minItems": 1
        }
    },
    "required": ["inputVoltage", "diodeVoltageDrop", "operatingPoints"],

    "$defs": {
        "boostOperatingPoint": {
            "description": "The description of one boost operating point",
            "title": "boostOperatingPoint",
            "type": "object",
            "properties": {
                "outputVoltage": {
                    "description": "Output voltage",
                    "type": "number"
                },
                "outputCurrent": {
                    "description": "Output current",
                    "type": "number"
                },
                "switchingFrequency": {
                    "description": "The switching frequency of the operating point",
                    "type": "number"
                },
                "ambientTemperature": {
                    "description": "The ambient temperature of the operating point",
                    "type": "number"
                }
            },
            "required": ["outputVoltage", "outputCurrent", "switchingFrequency", "ambientTemperature"]
        }
    }
}