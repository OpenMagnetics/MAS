{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/inputs/topologies/flybuck.json",
    "title": "flybuck",
    "description": "The description of a Flybuck converter excitation",
    "type": "object",
    "properties": {
        "inputVoltage": {
            "description": "The input voltage of the flybuck",
            "$ref": "/schemas/utils.json#/$defs/dimensionWithTolerance"
        },
        "diodeVoltageDrop": {
            "description": "The voltage drop on the diode",
            "type": "number"
        },
        "operatingPoints": {
            "description": "A list of operating points",
            "type": "array",
            "items": {
                "$ref": "#/$defs/flybuckOperatingPoint"
            },
            "minItems": 1
        }
    },
    "required": ["inputVoltage", "diodeVoltageDrop", "operatingPoints"],

    "$defs": {
        "flybuckOperatingPoint": {
            "description": "The descriptionof one flybuck operating point",
            "title": "flybuckOperatingPoint",
            "type": "object",
            "properties": {
                "outputVoltages": {
                    "description": "A list of output voltages, one per output",
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                },
                "outputCurrents": {
                    "description": "A list of output currents, one per output",
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                },
                "switchingFrequency": {
                    "description": "The switching frequency of the operating point",
                    "type": "number"
                },
                "ambientTemperature": {
                    "description": "The ambient temperature of the operating point",
                    "type": "number"
                }
            },
            "required": ["outputVoltages", "outputCurrents", "switchingFrequency", "ambientTemperature"]
        }
    }
}