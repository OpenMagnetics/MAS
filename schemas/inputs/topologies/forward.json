{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/inputs/topologies/forward.json",
    "title": "forward",
    "description": "The description of a Forward converter excitation",
    "type": "object",
    "properties": {
        "inputVoltage": {
            "description": "The input voltage of the forward",
            "$ref": "/schemas/utils.json#/$defs/dimensionWithTolerance"
        },
        "diodeVoltageDrop": {
            "description": "The voltage drop on the diode",
            "type": "number"
        },
        "currentRippleRatio": {
            "description": "The maximum current ripple allowed in the output",
            "type": "number"
        },
        "dutyCycle": {
            "description": "Duty cycle for the converter, maximum 50%",
            "type": "number"
        },
        "maximumSwitchCurrent": {
            "description": "The maximum current that can go through the selected switch",
            "type": "number"
        },
        "efficiency": {
            "description": "The target efficiency",
            "type": "number",
            "default": 1
        },
        "operatingPoints": {
            "description": "A list of operating points",
            "type": "array",
            "items": {
                "$ref": "#/$defs/forwardOperatingPoint"
            },
            "minItems": 1
        }
    },
    "required": ["inputVoltage", "diodeVoltageDrop", "operatingPoints", "currentRippleRatio"],

    "$defs": {
        "forwardOperatingPoint": {
            "description": "The description of one forward operating point",
            "title": "forwardOperatingPoint",
            "type": "object",
            "properties": {
                "outputVoltages": {
                    "description": "A list of output voltages, one per output",
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                },
                "outputCurrents": {
                    "description": "A list of output currents, one per output",
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                },
                "switchingFrequency": {
                    "description": "The switching frequency of the operating point",
                    "type": "number"
                },
                "ambientTemperature": {
                    "description": "The ambient temperature of the operating point",
                    "type": "number"
                }
            },
            "required": ["outputVoltages", "outputCurrents", "switchingFrequency", "ambientTemperature"]
        }
    }
}